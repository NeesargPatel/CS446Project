<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs446.cs.uw.tictacwoah.activities.HomeActivity">


    <Button
        android:id="@+id/single_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hotseat_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:text="@string/singleplayer_text" />

    <Button
        android:id="@+id/hotseat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onHotseatBtn"
        android:text="@string/hotseat_text" />

    <Button
        android:id="@+id/multi_player_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/hotseat_button"
        android:layout_marginTop="77dp"
        android:text="@string/multiplayer_text" />

    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/holo_blue_light"
        android:contentDescription="help"
        android:onClick="onHelpBtn"
        app:srcCompat="@android:drawable/ic_menu_help" />

</RelativeLayout>